@{
    Layout = "_Layout";
}

@using PierresTreats.Models
@model PierresTreats.Models.Treat


<div id="object-deets">
    <h1 class="display-name">@Html.DisplayFor(model => model.Name)<h1>

    @if (@Model.JoinEntities.Count == 0)
            {
        <h3>This treat is not yet associated with any flavors.</h3>
            }
            else
            {
            <h3>Flavors:</h3>
            <ul class="treat-flavor-link">
                    @foreach (var flavor in Model.JoinEntities)
                    {
                        <li class="list-margins">@Html.ActionLink($"{flavor.Flavor.Name}", "Details", "Flavors", new {id = flavor.FlavorId})</li>
                    }
            </ul>
            }
</div>


<p class="add-to-list">@Html.ActionLink("Add Flavor Here", "AddFlavor", "Treats", new {id = Model.TreatId})</p>

<div id="nav-links">

    <p>@Html.ActionLink("Treats", "Index", "Treats")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
    <p>@Html.ActionLink("Edit Treat", "Edit", "Treats", new { id = Model.TreatId })</p>
    <p>@Html.ActionLink("Delete Treat", "Delete", new { id = Model.TreatId })</p>
</div>