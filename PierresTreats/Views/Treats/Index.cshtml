@{
    Layout = "_Layout";
} @using PierresTreats.Models

<h1>Treats</h1>

@if (@Model.Count == 0)
{
    <div id="empty-value-div">
    <h3>There are currently no treats.</h3>
    <p>
        Add a Treat
        <span id="inner-nav-link">@Html.ActionLink("HERE", "Create")</span> in
        order to Add Flavors.
    </p>
</div>

    <div id="nav-links">
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>

}
else
{
    <div id="nav-links">
    <p>@Html.ActionLink("Add Treat", "Create", "Treats")</p>
    <p>@Html.ActionLink("Add Flavor", "Create", "Flavors")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>
}
<ul class="treat-flavor-link">
    @foreach (Treat treat in Model)
    {
        <li>
            @Html.ActionLink($"{treat.Name}", "Details", "Treats", new {id =
        treat.TreatId})
        </li>
    }
</ul>

