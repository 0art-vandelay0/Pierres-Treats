@{
    Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

@if (User.Identity.IsAuthenticated)
{
        <h3>Remove Flavor</h3>
        <br>

        <h4>Are you sure you want to delete this Flavor?</h4>

        <p class="model-name-display">@Html.DisplayFor(model => model.Name)</p>

    @using (Html.BeginForm())
    {
        <input id="form-button" type="submit" value="Delete" />
    }

        <div id="nav-container">
                <div id="dropdown-trigger">
                    <span>Menu</span>
                    <div id="dropdown-menu">
                        <div id="dropdown-links-container">
                    @Html.ActionLink("Home", "Index", "Home")
                    @Html.ActionLink("Add Flavor", "Create", "Flavors")
                    @Html.ActionLink("Add Treat", "Create", "Treats")
                    @Html.ActionLink("View Flavors", "Index", "Flavors")
                    @Html.ActionLink("View Treats", "Index", "Treats")
                    @Html.ActionLink("Log Out", "Index", "Account")
                        </div>
                    </div>
                </div>
            </div>
}
else
{
        <h2 class="not-authorized">You must be logged in to delete Flavors.</h2>

        <p>@Html.ActionLink("Log in", "Login", "Account")</p>

        <div id="nav-container">
                    <div id="dropdown-trigger">
                        <span>Menu</span>
                        <div id="dropdown-menu">
                            <div id="dropdown-links-container">
                                @Html.ActionLink("Home", "Index", "Home")
                                @Html.ActionLink("Log In", "Login", "Account")
                                @Html.ActionLink("Register", "Register", "Account")
                                @Html.ActionLink("View Flavors", "Index", "Flavors")
                                @Html.ActionLink("View Treats", "Index", "Treats")
                            </div>
                        </div>
                    </div>
                </div>
}
