@{
    Layout = "_Layout";
}

<h2>Account</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
    <h3>Hello @User.Identity.Name!</h3>
    <br>
    <p>You can now add flavors and <span id="inner-nav-link">@Html.ActionLink("HERE", "Create", "Flavors")</span></p>
    <br>
    <p>You can now add treats and <span id="inner-nav-link">@Html.ActionLink("HERE", "Create", "Treats")</span></p>
    <br>
    <p>or use the navigation dropdown menu.</p>
    <br>

    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn btn-primary" value="Log out" />
    }

    <div id="nav-container">
    <div id="dropdown-trigger">
        <span>Menu</span>
        <div id="dropdown-menu">
            <div id="dropdown-links-container">
                @Html.ActionLink("Home", "Index", "Home")
                @Html.ActionLink("Add Flavor", "Create", "Flavors")
                @Html.ActionLink("Add Treat", "Create", "Treats")
                @Html.ActionLink("View Flavors", "Index", "Flavors")
                @Html.ActionLink("View Treats", "Index", "Treats")
            </div>
        </div>
    </div>
</div>
}
else
{
    <p>@Html.ActionLink("Register", "Register")</p>
    <p>@Html.ActionLink("Log in", "Login")</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>


    <div id="nav-container">
    <div id="dropdown-trigger">
        <span>Menu</span>
        <div id="dropdown-menu">
            <div id="dropdown-links-container">
                @Html.ActionLink("Home", "Index", "Home")
                @Html.ActionLink("Log In", "Login", "Account")
                @Html.ActionLink("Register", "Register", "Account")
                @Html.ActionLink("View Flavors", "Index", "Flavors")
                @Html.ActionLink("View Treats", "Index", "Treats")
            </div>
        </div>
    </div>
</div>
}